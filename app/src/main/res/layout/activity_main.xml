<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/main_buttons"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_height="50dp"
        android:text="Secon Activity"
        android:gravity="center_horizontal" />

    <TextView
        android:background="@color/main_orange"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:padding="25dp"
        android:textColor="#444509"
        android:layout_width="wrap_content"
        android:textSize="28dp"
        android:drawableStart="@drawable/ic_yin_yang"
        android:drawableEnd="@drawable/ic_yin_yang"
        android:textIsSelectable="true"
        android:layout_height="wrap_content"
        android:hint="Введите имя"
        android:inputType="number"
        android:maxLines="2"
        android:gravity="center"
        android:layout_margin="25dp"/>
    <TextView
        android:background="@color/main_orange"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:padding="25dp"
        android:textColor="#444509"
        android:layout_width="wrap_content"
        android:textSize="28dp"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:layout_margin="25dp"/>
    <TextView
        android:background="@color/main_orange"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:padding="25dp"
        android:textColor="#444509"
        android:layout_width="wrap_content"
        android:textSize="28dp"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:layout_margin="25dp"/>
    <TextView
        android:background="@color/main_orange"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:padding="25dp"
        android:layout_width="wrap_content"
        android:textSize="28dp"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:layout_margin="25dp"/>
    <TextView
        android:background="@color/main_orange"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:padding="25dp"
        android:textColor="#444509"
        android:layout_width="wrap_content"
        android:textSize="28dp"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:layout_margin="25dp"/>
    <TextView
        android:background="@color/main_orange"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:padding="25dp"
        android:textColor="#444509"
        android:layout_width="wrap_content"
        android:textSize="28dp"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:layout_margin="25dp"/>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#771ab0d2"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <ImageView
            android:src="@drawable/ic_yin_yang"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="28sp"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:layout_margin="10dp"
            android:background="@color/main_orange"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Сема" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="28sp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/main_orange"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Вася" />

    </LinearLayout>
</LinearLayout>
</ScrollView>